---
interface Props {
  src: string;
  poster?: string;
  width?: string;
}

const { src, poster, width = "100%" } = Astro.props;
---

<div class="video-container" style="margin: 20px 0; border: 2px solid #000; box-shadow: 6px 6px 0px #000;">
  <video 
    controls 
    width={width}
    poster={poster}
    style="display: block;"
  >
    <source src={src} type="video/mp4" />
    Your browser does not support the video tag.
  </video>
</div>
